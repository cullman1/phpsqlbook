RewriteEngine On    # Turn on the rewriting engine
RewriteRule ^/?$  index.php [NC,L]

RewriteRule ^about/?$    article.php?title=about [NC,L]
RewriteRule ^contact/?$  article.php?title=contact [NC,L]
RewriteRule ^admin/?$ admin/article.php [NC,L]
RewriteRule ^login/?$ login.php [NC,L]
RewriteRule ^register/?$ register.php [NC,L]
RewriteRule ^logout/?$ logout.php [NC,L]
RewriteRule ^like/?$ like.php [QSA,L]
RewriteRule ^unlike/?$ unlike.php [QSA,L]
RewriteRule ^profile/?$ profile-status.php?id=$1 [QSA,L]

RewriteRule ^users/?$ user-list.php [NC,L]
RewriteRule ^search/?$   search.php$1 [NC,L]
RewriteRule ^author/([^/.]+)/?$  author.php?name=$1&show=$2&term=$3&to=$4 [QSA,L]
RewriteRule ^add_comment/?$  add_comment.php?article_id=$1&nesting_level=$2&toplevelparentid=$3&replyto=$4 [QSA,L]
RewriteRule ^([^/.]+)/([^/.]+)/?$  article.php?title=$2 [NC,L]
RewriteRule ^([^/.]+)/?$  article-list.php?title=$1&show=$2&term=$3&to=$4 [QSA,L]
